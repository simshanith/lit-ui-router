{
  "$schema": "https://turborepo.com/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["build:custom-elements"]
    },
    "build:custom-elements": {
      "inputs": ["src/**/*.ts"],
      "outputs": ["dist/custom-elements.json"]
    },
    "docs:api": {
      "inputs": ["typedoc.json", "src/**/*.ts"],
      "outputs": ["../../docs/api/reference/**"],
      "dependsOn": ["^build"],
      "cache": true
    }
  }
}
