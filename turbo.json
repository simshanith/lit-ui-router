{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "transit": {
      "dependsOn": ["^transit"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": ["src/**/*.ts", "vitest.config.ts", "cypress.config.ts"]
    },
    "test:coverage": {
      "dependsOn": ["^test:coverage"],
      "inputs": ["src/**/*.ts", "vitest.config.ts"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "dependsOn": ["transit"],
      "inputs": ["**/*.ts", "$TURBO_DEFAULT$", "eslint.config.js", ".prettierrc"]
    },
    "ci": {
      "dependsOn": ["build", "test", "test:coverage", "lint"]
    },
    "format": {
      "dependsOn": ["transit"]
    },
    "e2e": {
      "dependsOn": ["^build","^docs","^e2e"],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "docs": {
      "dependsOn": ["^docs"],
      "cache": false,
      "persistent": true
    }
  }
}
