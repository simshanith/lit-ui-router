{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "transit": {
      "dependsOn": ["^transit"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": ["src/**/*.ts", "vitest.config.ts", "cypress.config.ts"]
    },
    "lint": {
      "dependsOn": ["transit"]
    },
    "ci": {
      "dependsOn": ["build", "test", "lint"]
    },
    "format": {
      "dependsOn": ["transit"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "docs": {
      "dependsOn": ["^docs"],
      "cache": false,
      "persistent": true
    }
  }
}
