{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "transit": {
      "dependsOn": ["^transit"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": ["src/**/*.ts", "vitest.config.ts", "cypress.config.ts"]
    },
    "test:coverage": {
      "dependsOn": ["^test:coverage"],
      "inputs": ["src/**/*.ts", "vitest.config.ts"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "inputs": ["**/*.ts", "**/*.js", "$TURBO_DEFAULT$"]
    },
    "ci": {
      "dependsOn": ["build", "test", "test:coverage", "lint", "format:check"]
    },
    "format": {
      "inputs": ["**/*.{ts,js,json,md}", ".prettierrc", ".prettierignore"]
    },
    "format:check": {
      "inputs": ["**/*.{ts,js,json,md}", ".prettierrc", ".prettierignore"]
    },
    "e2e": {
      "dependsOn": ["^build", "^docs", "^e2e"],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "docs": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    }
  }
}
