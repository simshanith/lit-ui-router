{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "transit": {
      "dependsOn": ["^transit"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": ["src/**/*.ts", "vitest.config.ts", "cypress.config.ts"]
    },
    "test:coverage": {
      "dependsOn": ["^build", "^test:coverage"],
      "inputs": ["src/**/*.ts", "vitest.config.ts"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "with": ["//#lint:root"],
      "inputs": ["**/*.ts", "**/*.js", "eslint.config.js", "$TURBO_DEFAULT$"]
    },
    "//#lint:root": {
      "inputs": ["examples/**/*.{ts,js}", "eslint.config.js", "$TURBO_DEFAULT$"]
    },
    "ci": {
      "dependsOn": ["build", "test", "test:coverage", "lint", "format:check"]
    },
    "format": {
      "with": ["//#format:root"],
      "inputs": ["**/*.{ts,js,json,jsonc,md}", ".prettierrc", ".prettierignore"]
    },
    "format:check": {
      "with": ["//#format:check:root"],
      "inputs": ["**/*.{ts,js,json,jsonc,md}", ".prettierrc", ".prettierignore"]
    },
    "//#format:root": {
      "inputs": [
        "*.{ts,js,json,jsonc,md}",
        "examples/**/*.{ts,js,json,jsonc,md}",
        ".prettierrc",
        ".prettierignore"
      ]
    },
    "//#format:check:root": {
      "inputs": [
        "*.{ts,js,json,jsonc,md}",
        "examples/**/*.{ts,js,json,jsonc,md}",
        ".prettierrc",
        ".prettierignore"
      ]
    },
    "e2e": {
      "dependsOn": ["^build", "^docs", "^e2e"],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "docs": {
      "dependsOn": ["^build", "^docs:api"],
      "cache": false,
      "persistent": true
    },
    "docs:api": {
      "dependsOn": ["^docs:api"],
      "cache": false
    }
  }
}
