{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/sample-app-lit/src",
  "projectType": "application",
  "generators": {},
  "targets": {
    "build": {
      "executor": "@nrwl/web:webpack",
      "options": {
        "outputPath": "dist/apps/sample-app-lit",
        "index": "apps/sample-app-lit/src/index.html",
        "main": "apps/sample-app-lit/src/main.ts",
        "polyfills": "apps/sample-app-lit/src/polyfills.ts",
        "tsConfig": "apps/sample-app-lit/tsconfig.app.json",
        "assets": [
          "apps/sample-app-lit/src/favicon.ico",
          {
            "glob": "**/*.{json,md}",
            "input": "apps/sample-app-lit/src/static/",
            "output": "./static/"
          },
          {
            "glob": "**/*",
            "input": "node_modules/@uirouter/visualizer/images/",
            "output": "./images/"
          },
          {
            "glob": "**/*",
            "input": "dist/libs/lit-ui-router/",
            "output": "./lib/"
          }
        ],
        "styles": ["apps/sample-app-lit/src/styles.css"],
        "scripts": []
      },
      "configurations": {
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/sample-app-lit/src/environments/environment.ts",
              "with": "apps/sample-app-lit/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "extractCss": true,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false,
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "2mb",
              "maximumError": "5mb"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/web:dev-server",
      "options": {
        "buildTarget": "sample-app-lit:build",
        "host": "0.0.0.0",
        "allowedHosts": "all"
      },
      "configurations": {
        "production": {
          "buildTarget": "sample-app-lit:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/sample-app-lit/**/*.ts"]
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "options": {
        "jestConfig": "apps/sample-app-lit/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "yarn nx build sample-app-lit --prod --baseHref=/lit-ui-router/",
          "yarn gh-pages --dist dist/apps/sample-app-lit --repo $(pwd)"
        ],
        "parallel": false
      }
    }
  },
  "tags": [],
  "implicitDependencies": ["lit-ui-router"]
}
